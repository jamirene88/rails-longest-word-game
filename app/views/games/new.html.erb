<div class='container'>
  <h1>New Game</h1>
  <ul><%  @random_array.each do |letter|%>
    <li><div class='letter_box'> <%= letter %></div></li>
    <% end %>
  </ul>
  <form action="score">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag "grid", @random_array %>
    <input type="text" name="guess">
    <input type="submit" value="Longest word!" class="btn btn-success">
  </form>
</div>
